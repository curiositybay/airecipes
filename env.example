APP_NAME=airecipes

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_SLUG=${APP_NAME}

# App Configuration
NEXT_PUBLIC_APP_NAME=Your App Name
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_ENVIRONMENT=development
NEXT_PUBLIC_APP_DESCRIPTION=AI Recipes by Curiosity Bay - Discover recipes powered by artificial intelligence

# Domain and URLs (Development)
NEXT_PUBLIC_APP_DOMAIN=localhost
NEXT_PUBLIC_APP_URL=http://localhost:3002
NEXT_PUBLIC_GITHUB_REPO=https://github.com/curiositybay/airecipes

# SEO and Social Media
NEXT_PUBLIC_APP_AUTHOR=Curiosity Bay
NEXT_PUBLIC_APP_KEYWORDS=AI recipes, artificial intelligence, cooking, recipes, Curiosity Bay
NEXT_PUBLIC_TWITTER_HANDLE=@Megalomobile
NEXT_PUBLIC_CONTACT_EMAIL=info@curiositybay.com

# Error Messages
NEXT_PUBLIC_404_MESSAGE=The page you're looking for doesn't exist.
NEXT_PUBLIC_500_MESSAGE=Something went wrong on our end. Please try again later.

# Auth Service Configuration (Development)
