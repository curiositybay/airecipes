# Development Dockerfile for Next.js application
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Install dependencies needed for native modules
RUN apk add --no-cache libc6-compat curl

# Copy package files
COPY package.json package-lock.json* ./
COPY prisma ./prisma/

# Don't install dependencies during build - will be installed in container
# RUN npm ci

# Generate Prisma client (will use shared node_modules)
RUN npx prisma generate

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Set environment variables
ENV NODE_ENV=development
ENV PORT=3000

# Start development server (will install deps first if needed)
CMD ["sh", "-c", "if [ ! -d 'node_modules' ] || [ ! -f 'node_modules/.package-lock.json' ]; then npm install; fi && npm run dev"] 